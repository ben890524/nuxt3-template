{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"]
    }
  },
  "extends": "./.nuxt/tsconfig.json" // https://v3.nuxtjs.org/concepts/typescript
}
